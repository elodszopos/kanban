{
  "presets": ["react", "es2015", "stage-1"],
  "env": {
    "start": {
        "plugins": [
            ["react-transform", {
                 "transforms": [
                     {
                        "transform": "react-transform-hmr",
                        "imports": ["react"],
                        "locals": ["module"]
                     }
                 ]
             }],
             ["transform-object-rest-spread"]
        ]
    },
    "build": {
        "plugins": [
            ["react-transform", {
                 "transforms": [
                     {
                        "transform": "react-transform-hmr",
                        "imports": ["react"],
                        "locals": ["module"]
                     }
                 ]
             }],
             ["transform-object-rest-spread"]
        ]
    }
  }
}